{% form_theme form "bootstrap_3_layout.html.twig" %}

<div class="row">
    <div class="col-md-6">
        <h3 class="margin_clear_top">{% trans %}modules_drag_1{% endtrans %}</h3>
        
        <input id="modules_drag_switch" type="checkbox" data-on-color="success" data-off-color="danger">
        
        <form id="form_cp_modules_drag" action="{{path("cp_modules_drag", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
            {{form_widget(form.sortHeader, {'label': "modules_drag_2"})}}
            {{form_widget(form.sortLeft, {'label': "modules_drag_3"})}}
            {{form_widget(form.sortCenter, {'label': "modules_drag_4"})}}
            {{form_widget(form.sortRight, {'label': "modules_drag_5"})}}
            
            {{form_widget(form._token)}}
        </form>
    </div>
</div>