{% form_theme form "@templateRoot/layout/layout_form_materialDesign.html.twig" %}

<h2 class="mdc-typography--headline6">{% trans %}microserviceQunitProfile_1{% endtrans %}</h2>
<form id="form_cp_microservice_qunit_profile" action="{{path("cp_microservice_qunit_profile", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
    {{form_row(form.name, {'dense': "", 'styleType': "outlinedTrailing", 'icon': "textsms"})}}
    
    <p class="info_field">{% trans %}microserviceQunitFormType_2_i{% endtrans %}</p>
    {{form_row(form.origin, {'dense': "", 'styleType': "outlinedTrailing", 'icon': "textsms"})}}
    
    {{form_row(form.code, {'dense': "", 'styleType': "outlinedTrailing", 'icon': "textsms", 'attr' : {'id': "qunit_code_row"}})}}
    {{form_row(form.active)}}

    {{form_widget(form._token)}}

    {{form_widget(form.submit, {'dense': "", 'raised': ""})}}
</form>

