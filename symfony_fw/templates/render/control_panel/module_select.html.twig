            {{-include("@templateRoot/include/table_and_pagination.html.twig")-}}

            <table>
                <thead>
                    <tr>
                        <th>
                            <span>{% trans %}moduleSelect_3{% endtrans %}</span>
                            <i class="material-icons">arrow_drop_down</i>
                            <i class="material-icons">arrow_drop_up</i>
                        </th>
                        <th>
                            <span>{% trans %}moduleSelect_4{% endtrans %}</span>
                            <i class="material-icons">arrow_drop_down</i>
                            <i class="material-icons">arrow_drop_up</i>
                        </th>
                        <th>
                            <span>{% trans %}moduleSelect_5{% endtrans %}</span>
                            <i class="material-icons">arrow_drop_down</i>
                            <i class="material-icons">arrow_drop_up</i>
                        </th>
                        <th>
                            <span>{% trans %}moduleSelect_6{% endtrans %}</span>
                            <i class="material-icons">arrow_drop_down</i>
                            <i class="material-icons">arrow_drop_up</i>
                        </th>
                        <th>
                            <span>{% trans %}moduleSelect_7{% endtrans %}</span>
                            <i class="material-icons">arrow_drop_down</i>
                            <i class="material-icons">arrow_drop_up</i>
                        </th>
                        <th>
                            <span>{% trans %}moduleSelect_8{% endtrans %}</span>
                            <i class="material-icons">arrow_drop_down</i>
                            <i class="material-icons">arrow_drop_up</i>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{response.values.listHtml|raw}}
                </tbody>
            </table>
        </div>
        <button id="cp_module_select_button_desktop" class="mdc-button mdc-button--dense mdc-button--raised" type="button">{% trans %}moduleSelect_9{% endtrans %}</button>
    </div>
    <div id="cp_module_select_mobile" class="display_mobile">
        {% form_theme form "@templateRoot/layout/layout_form_materialDesign.html.twig" %}
        
        <form id="form_cp_module_select_mobile" action="{{path("cp_module_profile", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
            {{form_row(form.id)}}

            {{form_widget(form._token)}}

            {{form_widget(form.submit, {'dense': "", 'raised': ""})}}
        </form>
    </div>
    <div id="cp_module_select_result"></div>
