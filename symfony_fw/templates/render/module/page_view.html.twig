{% extends "@templateRoot/layout/layout_module_clean.html.twig" %}

{% block panelId %}panel_id_{{response.module.id}}{% endblock %}
{% block moduleContainer %}
    <div class="page_container">
        {% if response.values.title != "" %}
            <div class="header">
                <h1 class="mdc-typography--headline6">{{response.values.title}}</h1>
            </div>
        {% endif %}

        <div class="argument"><p>{{response.values.argument|raw}}</p></div>

        {% if response.values.controllerAction != "" %}
            <div class="controllerAction">
                {{-render(controller(response.values.controllerAction, {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra}))-}}
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block moduleFooter %}
    <div class="page_footer">
        {% if settingRow['page_date'] == true %}
            <div class="mdc-typography--caption page_detail">
                {% if (response.values.userCreation != "-" and response.values.userModification == "-") %}
                    <p><i class="material-icons md-14">pets</i> <span class="mdc-theme--on-surface">{% trans %}pageView_1{% endtrans %}</span>{{response.values.userCreation}}</p>
                    <p><i class="material-icons md-14">calendar_today</i> <span class="mdc-theme--on-surface">{% trans %}pageView_2{% endtrans %}</span>{{response.values.dateCreation[0]}} [{{response.values.dateCreation[1]}}]</p>
                {% elseif (response.values.userModification != "-") %}
                    <p><i class="material-icons md-14">pets</i> <span class="mdc-theme--on-surface">{% trans %}pageView_3{% endtrans %}</span>{{response.values.userModification}}</p>
                    <p><i class="material-icons md-14">calendar_today</i> <span class="mdc-theme--on-surface">{% trans %}pageView_4{% endtrans %}</span>{{response.values.dateModification[0]}} [{{response.values.dateModification[1]}}]</p>
                {% endif %}
            </div>
        {% endif %}
        
        {% if urlCurrentPageId > 5 %}
            {{-render(controller("App\\Controller\\PageCommentController::renderAction", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra}))-}}

            {{-render(controller("App\\Controller\\PageCommentController::saveAction", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra}))-}}
        {% endif %}
    </div>
{% endblock %}