{% form_theme form "@templateRoot/layout/layout_form_materialDesign.html.twig" %}

<div>
    <h2 class="mdc-typography--headline6">{% trans %}apiTestProfile_1{% endtrans %}</h2>
    <form id="form_cp_apiTest_profile" action="{{path("cp_apiTest_profile_save", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
        {{form_row(form.name, {'dense': "", 'styleType': "outlinedTrailing", 'icon': "textsms"})}}
        {{form_row(form.ip, {'dense': "", 'styleType': "outlinedTrailing", 'icon': "textsms"})}}
        {{form_row(form.token, {'dense': "", 'styleType': "outlinedTrailing", 'icon': "textsms"})}}
        {{form_row(form.active)}}

        {{form_widget(form._token)}}

        {{form_widget(form.submit, {'dense': "", 'raised': ""})}}
    </form>
    
    {% if is_granted("ROLE_ADMIN") == true %}
        {{-include("@templateRoot/microservice/api/test/delete.html.twig")-}}
    {% endif %}
</div>