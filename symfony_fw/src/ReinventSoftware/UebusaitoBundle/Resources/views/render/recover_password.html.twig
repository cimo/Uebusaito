{% form_theme form "@UebusaitoBundleViews/layout/layout_form_materialDesign.html.twig" %}

<div>
    {% if response.values.userId == null %}
        <h3 class="margin_clear">{% trans %}recover_password_1{% endtrans %}</h3>
        <form id="form_recover_password" action="{{path("recover_password", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
            <div class="group_form">
                <i class="material-icons">email</i>
                {{form_row(form.email, {'label': "recover_password_2"})}}
            </div>

            {{form_widget(form._token)}}
            
            {{form_widget(form.submit, {'label': "button_4"})}}
        </form>
    {% else %}
        <h3 class="margin_clear">{% trans %}recover_password_3{% endtrans %}</h3>
        <form id="form_change_password" action="{{path("recover_password", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
            <div class="group_form">
                <i class="material-icons">linear_scale</i>
                {{form_row(form.password, {'label': "recover_password_4"})}}
            </div>
            <div class="group_form">
                <i class="material-icons">linear_scale</i>
                {{form_row(form.passwordConfirm, {'label': "recover_password_5"})}}
            </div>

            {{form_widget(form._token)}}

            {{form_widget(form.submit, {'label': "button_4"})}}
        </form>
    {% endif %}
</div>