{% form_theme form "bootstrap_3_layout.html.twig" %}

<div class="row">
    <div class="col-md-6">
        <h3 class="form_title">{% trans %}role_creation_1{% endtrans %}</h3>
        <form id="form_cp_role_creation" action="{{path("cp_role_creation", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
            <div class="form-group">
                {{form_label(form.level, "role_creation_2")}}
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-header"></i></span>
                    {{form_errors(form.level)}}
                    {{form_widget(form.level)}}
                </div>
            </div>

            {{form_widget(form._token)}}

            <input class="button_custom" type="submit" value="{% trans %}button_1{% endtrans %}"/>
        </form>
    </div>
</div>