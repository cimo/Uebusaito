{% form_theme form "bootstrap_3_layout.html.twig" %}

<div class="row">
    <div class="col-md-6">
        <h3 class="form_title">{% trans %}user_profile_1{% endtrans %}</h3>
        <form id="cp_user_profile_form" action="{{path("cp_user_profile_save", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
            {% if is_granted("ROLE_ADMIN") == true %}
                <div id="user_roleUserId_wordTag_container" class="form-group">
                    {{form_label(form.roleUserId, "user_profile_2")}}
                    {{form_errors(form.roleUserId)}}
                    {{form_widget(form.roleUserId)}}
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-tags"></i></span>
                        {{response.values.roleUserHtml|raw}}
                    </div>
                </div>
            {% endif %}
            
            <div class="form-group">
                {{form_label(form.username, "user_profile_3")}}
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-paw"></i></span>
                    {{form_errors(form.username)}}
                    {{form_widget(form.username)}}
                </div>
            </div>
            
            {{form_row(form.name, {'label': "user_profile_4"})}}
            {{form_row(form.surname, {'label': "user_profile_5"})}}
            
            <div class="form-group">
                {{form_label(form.email, "user_profile_6")}}
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    {{form_errors(form.email)}}
                    {{form_widget(form.email)}}
                </div>
            </div>
            
            {{form_row(form.telephone, {'label': "user_profile_7"})}}
            {{form_row(form.born, {'label': "user_profile_8"})}}
            {{form_row(form.gender, {'label': "user_profile_9"})}}

            {% if form.fiscalCode.vars.value != "" %}
                {{form_row(form.fiscalCode, {'label': "user_profile_10"})}}
                {{form_row(form.companyName, {'label': "user_profile_11"})}}
                {{form_row(form.vat, {'label': "user_profile_12"})}}
            {% endif %}

            {{form_row(form.website, {'label': "user_profile_13"})}}
            {{form_row(form.state, {'label': "user_profile_14"})}}
            {{form_row(form.city, {'label': "user_profile_15"})}}
            {{form_row(form.zip, {'label': "user_profile_16"})}}
            {{form_row(form.address, {'label': "user_profile_17"})}}
            
            <div class="form-group">
                {{form_label(form.password, "user_profile_18")}}
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    {{form_errors(form.password)}}
                    {{form_widget(form.password)}}
                </div>
            </div>
            
            <div class="form-group">
                {{form_label(form.passwordConfirm, "user_profile_19")}}
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    {{form_errors(form.passwordConfirm)}}
                    {{form_widget(form.passwordConfirm)}}
                </div>
            </div>

            {{form_row(form.notLocked, {'label': "user_profile_20"})}}
            
            <div class="form-group">
                <label class="control-label required" for="user_credit">{% trans %}user_profile_21{% endtrans %}</label>
                <div class="input-group">
                    <p id ="user_credit">{{response.values.credit}}</p>
                </div>
            </div>

            {{form_widget(form._token)}}

            <input class="button_custom" type="submit" value="{% trans %}button_3{% endtrans %}"/>
        </form>
        
        {% if is_granted("ROLE_ADMIN") == true and response.values.id > 1 %}
            {{-include("@UebusaitoBundleViews/render/control_panel/user_deletion.html.twig")-}}
        {% endif %}
    </div>
</div>