<div id="language_page_container">
    {% for value in response.values.languageRows %}
        {% if (file_exists(urlRoot ~ "/bundles/uebusaito/images/templates/" ~ response.values.settingRow['template'] ~ "/lang/" ~ value.code ~ ".png") == true) %}
            <div class="mdc-chip">
                <img class="mdc-chip__icon mdc-chip__icon--leading flag_{{value.code}}" src="{{asset("bundles/uebusaito/images/templates/" ~ response.values.settingRow['template'] ~ "/lang/" ~ value.code ~ ".png")}}" alt="{{value.code}}.png"/>
                <div class="mdc-chip__text sort_elemet_data">{{value.code}}</div>
            </div>
        {% else %}
            <div class="mdc-chip">
                <img class="mdc-chip__icon mdc-chip__icon--leading flag_{{value.code}}" src="{{asset("bundles/uebusaito/images/templates/" ~ "/lang/empty.png")}}" alt="{{value.code}}.png"/>
                <div class="mdc-chip__text sort_elemet_data">---</div>
            </div>
        {% endif %}
    {% endfor %}
    <form id="form_language_page" action="{{path("language_page", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
        {{form_row(form.codePage)}}

        {{form_widget(form._token)}}
    </form>
</div>
<script type="text/javascript">
    var textLanguagePage = {
        'label_1': "{{"languagePage_1"|trans}}"
    };
</script>