{% extends "@UebusaitoBundleViews/layout/layout_module.html.twig" %}

{% block panelId %}panel_id_{{response.module.id}}{% endblock %}
{% block panelClass %}
{% spaceless %}
    {% if urlExtra == "maintenance_authentication" %}
        maintenance_authentication
    {% endif %}
{% endspaceless %}
{% endblock %}
{% block moduleHeaderIcon %}
    <i class="material-icons">account_box</i>
{% endblock %}
{% block moduleHeader %}
    {{response.module.label|trans}}
{% endblock %}
{% block moduleContainer %}
    {% if form == null %}
        <p><b>{% trans %}authentication_1{% endtrans %}</b></p>
        <p>{{response.values.user.username}}</p>
        <p><b>{% trans %}authentication_2{% endtrans %}</b></p>
        <p>
            {% for value in response.values.roleUserRow %}
                - {{value|trans}}
            {% endfor %}
        </p>
        <p><b>{% trans %}authentication_3{% endtrans %}</b></p>
        <p>{{response.values.dateLastLogin[0]}} [{{response.values.dateLastLogin[1]}}]</p>
        <div class="container_buttons">
            <a class="mdc-button mdc-button--dense mdc-button--raised" href="{{path("root_render", {'_locale': urlLocale, 'urlCurrentPageId': 1, 'urlExtra': "cp_profile"})}}">{% trans %}authentication_4{% endtrans %}</a>
            <a class="mdc-button mdc-button--dense mdc-button--raised" href="{{path("authentication_exit_check", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}">{% trans %}authentication_5{% endtrans %}</a>
        </div>
    {% else %}
        {% form_theme form "@UebusaitoBundleViews/layout/layout_form_materialDesign.html.twig" %}

        <form id="form_authentication" class="form_user_authentication" action="{{path("authentication_enter_check", {'_locale': urlLocale, 'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
            {{form_row(form._username, {'label': "authentication_6", 'dense': "", 'styleType': "outlinedTrailing", 'icon': "pets"})}}
            {{form_row(form._password, {'label': "authentication_7", 'dense': "", 'styleType': "outlinedTrailing", 'icon': "linear_scale"})}}
            
            {% if (settingRow['captcha'] == true) %}
                {{-include("@UebusaitoBundleViews/include/captcha.html.twig")-}}
            {% endif %}
            
            {{form_widget(form._token)}}

            <div class="container_submit">
                {{form_widget(form._remember_me, {'label': "authentication_8"})}}
                {{form_widget(form.submit, {'label': "authentication_9", 'dense': "", 'raised': ""})}}
            </div>
        </form>

        {% if (settingRow['website_active'] == true) %}
            <div class="container_links">
                <a class="mdc-typography--caption mdc-theme--on-surface" href="{{path("root_render", {'_locale': urlLocale, 'urlCurrentPageId': 4})}}">{% trans %}authentication_11{% endtrans %}</a>
                <a class="mdc-typography--caption mdc-theme--on-surface" href="{{path("root_render", {'_locale': urlLocale, 'urlCurrentPageId': 3})}}">{% trans %}authentication_10{% endtrans %}</a>
            </div>
        {% endif %}
    {% endif %}
{% endblock %}
{% block moduleFooter %}{% endblock %}