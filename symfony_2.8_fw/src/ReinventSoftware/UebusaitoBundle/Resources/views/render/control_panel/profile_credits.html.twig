{% form_theme form "bootstrap_3_layout.html.twig" %}

<div class="row">
    <div class="col-md-5">
        <h3>{% trans %}profile_credits_1{% endtrans %}</h3>
        <p><b>{% trans %}profile_credits_2{% endtrans %}</b> {{response.values.currentCredits}}</p>
        <p><b>{% trans %}profile_credits_3{% endtrans %}</b> {{settings['payPal_credit_amount']}} <u>{{settings['payPal_currency_code']|upper}}</u></p>
        <form id="form_cp_profile_credits" action="{{path("cp_profile_credits", {'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
            <div class="form-group">
                {{form_label(form.credits, "profile_credits_4")}}
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-paypal"></i></span>
                    {{form_errors(form.credits)}}
                    {{form_widget(form.credits)}}
                </div>
            </div>
            
            {{form_widget(form.token)}}
            
            <input class="button_payPal" type="submit" value=""/>
        </form>
    </div>
</div>
{% if (response.values.payPalSandbox == true) %}
    <form id="form_cp_profile_credits_paypal" class="visibility_hidden" action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post">
{% else %}
    <form id="form_cp_profile_credits_paypal" class="visibility_hidden" action="https://www.paypal.com/cgi-bin/webscr" method="post">
{% endif %}
    <input type="hidden" name="cmd" value="_xclick"/>
    <!-- Setting -->
    <input type="hidden" name="business" value="{{settings['payPal_business']}}"/>
    <input type="hidden" name="notify_url" value="{{app.request.schemeAndHttpHost ~ path("cp_profile_credits_payPal", {'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}"/>
    <input type="hidden" name="return" value="{{app.request.schemeAndHttpHost ~ path("index", {'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}"/>
    <input type="hidden" name="cancel_return" value="{{app.request.schemeAndHttpHost ~ path("index", {'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}"/>
    <input type="hidden" name="no_shipping" value="1"/>
    <input type="hidden" name="no_note" value="1"/>
    <!-- Payment -->
    <input type="hidden" name="currency_code" value="{{settings['payPal_currency_code']|upper}}"/>
    <input type="hidden" name="item_name" value="credits"/>
    <input type="hidden" name="amount" value="{{settings['payPal_credit_amount']}}"/>
    <input type="hidden" name="quantity" value=""/>
    <input type="hidden" name="custom" value="{{app.user.id}}"/>
</form>