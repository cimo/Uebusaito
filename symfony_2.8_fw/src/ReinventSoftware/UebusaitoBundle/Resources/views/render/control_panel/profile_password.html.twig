{% form_theme form "bootstrap_3_layout.html.twig" %}

<div class="row">
    <div class="col-md-5">
        <h3>{% trans %}profile_password_1{% endtrans %}</h3>
        <form id="form_cp_profile_password" action="{{path("cp_profile_password", {'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra})}}" method="post" novalidate="novalidate">
            <div class="form-group">
                {{form_label(form.old, "profile_password_2")}}
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    {{form_errors(form.old)}}
                    {{form_widget(form.old)}}
                </div>
            </div>
            
            <div class="form-group">
                {{form_label(form.new, "profile_password_3")}}
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    {{form_errors(form.new)}}
                    {{form_widget(form.new)}}
                </div>
            </div>
            
            <div class="form-group">
                {{form_label(form.newConfirm, "profile_password_4")}}
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    {{form_errors(form.newConfirm)}}
                    {{form_widget(form.newConfirm)}}
                </div>
            </div>
            
            {{form_widget(form.token)}}
            
            <input class="btn btn-primary" type="submit" value="{% trans %}button_3{% endtrans %}"/>
        </form>
    </div>
</div>