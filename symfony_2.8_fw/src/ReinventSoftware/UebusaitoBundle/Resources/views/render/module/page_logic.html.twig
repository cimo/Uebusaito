{% extends "UebusaitoBundle::layout/layout_module_clean.html.twig" %}

{% block panelId %}panel_id_{{response.module.id}}{% endblock %}
{% block moduleHeader %}
    {{response.module.label|trans}}
{% endblock %}
{% block moduleContainer %}
    <div class="margin_bottom">
        <div class="page-header page_header">
            <h1 class="page_header_h1">{{response.values.title}}</h1>
        </div>
        <div>
            <div class="margin_top margin_bottom">{{response.values.argument|raw}}</div>
            {% if response.values.controllerAction is not empty %}
                {{-render(controller(response.values.controllerAction, {'urlCurrentPageId': urlCurrentPageId, 'urlExtra': urlExtra}))-}}
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block moduleFooter %}{% endblock %}